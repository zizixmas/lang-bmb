// Basic allocation test (Phase 34.2.1)
// Tests malloc, free, calloc individually due to interpreter scope limitations

fn test_malloc() -> i64 = {
    let ptr = malloc(64);
    println(ptr);
    free(ptr);
    0
};

fn test_calloc() -> i64 = {
    let ptr = calloc(10, 8);
    println(ptr);
    free(ptr);
    0
};

fn test_realloc() -> i64 = {
    let ptr = malloc(32);
    let ptr2 = realloc(ptr, 64);
    println(ptr2);
    free(ptr2);
    0
};

fn main() -> i64 = {
    println(test_malloc());
    println(test_calloc());
    println(test_realloc());
    0
};
